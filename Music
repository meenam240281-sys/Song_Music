    <script>
        // Music player functionality
        const audio = new Audio();
        const playlistItems = document.getElementById('playlist-items');
        const playPauseBtn = document.getElementById('play-pause-btn');
        const playPauseIcon = document.getElementById('play-pause-icon');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        const progressBar = document.getElementById('progress-bar');
        const progress = document.getElementById('progress');
        const currentTimeEl = document.getElementById('current-time');
        const songDurationEl = document.getElementById('song-duration');
        const volumeSlider = document.getElementById('volume-slider');
        const currentSongTitle = document.getElementById('current-song-title');
        const currentSongArtist = document.getElementById('current-song-artist');
        const currentSongDescription = document.getElementById('current-song-description');
        const currentAlbumCover = document.getElementById('current-album-cover');
        
        // Focus timer functionality
        const timerDisplay = document.getElementById('timer-display');
        const startTimerBtn = document.getElementById('start-timer');
        const pauseTimerBtn = document.getElementById('pause-timer');
        const resetTimerBtn = document.getElementById('reset-timer');
        const timerPresets = document.querySelectorAll('.timer-presets button');
        
        // Playlist data - instrumental or lyric-suppressed tracks
        const playlist = [
            {
                id: 1,
                title: "Ambient Study Session",
                artist: "Focus Waves",
                description: "A calming ambient track with suppressed vocals to enhance concentration and reduce distractions.",
                src: "https://assets.codepen.io/605876/long-interlude-by-kevin-macleod-from-filmmusic-io.mp3",
                duration: "3:45",
                cover: "https://images.unsplash.com/photo-1511379938547-c1f69419868d?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
            },
            {
                id: 2,
                title: "Deep Focus Flow",
                artist: "Productivity Beats",
                description: "Minimal beats with no lyrics, designed for deep work and coding sessions.",
                src: "https://assets.codepen.io/605876/study-music-by-kevin-macleod-from-filmmusic-io.mp3",
                duration: "4:20",
                cover: "https://images.unsplash.com/photo-1518609878373-06d740f60d8b?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
            },
            {
                id: 3,
                title: "Calm Coding Atmosphere",
                artist: "Code Harmony",
                description: "Soothing instrumental music to maintain flow state during programming.",
                src: "https://assets.codepen.io/605876/almost-bliss-silent-partner.mp3",
                duration: "3:30",
                cover: "https://images.unsplash.com/photo-1555066931-4365d14bab8c?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
            },
            {
                id: 4,
                title: "Mindful Work Rhythm",
                artist: "Zen Tunes",
                description: "Gentle, lyric-free music to help you stay present and focused on tasks.",
                src: "https://assets.codepen.io/605876/boynton-beach-by-kevin-macleod-from-filmmusic-io.mp3",
                duration: "5:10",
                cover: "https://images.unsplash.com/photo-1546833999-b9f581a1996d?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
            },
            {
                id: 5,
                title: "Productivity Pulse",
                artist: "Flow State Collective",
                description: "Upbeat instrumental track to energize work sessions without lyrical distraction.",
                src: "https://assets.codepen.io/605876/cold-sober-silent-partner.mp3",
                duration: "4:05",
                cover: "https://images.unsplash.com/photo-1498050108023-c5249f4df085?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
            }
        ];
        
        let currentSongIndex = 0;
        let isPlaying = false;
        let timerInterval;
        let timerMinutes = 25;
        let timerSeconds = 0;
        let isTimerRunning = false;
        
        // Initialize the player
        function initPlayer() {
            loadSong(currentSongIndex);
            renderPlaylist();
            
            // Set initial volume
            audio.volume = volumeSlider.value / 100;
            
            // Update time as audio plays
            audio.addEventListener('timeupdate', updateProgress);
            
            // When song ends, play next
            audio.addEventListener('ended', nextSong);
            
            // Play/pause button click
            playPauseBtn.addEventListener('click', togglePlay);
            
            // Previous button click
            prevBtn.addEventListener('click', prevSong);
            
            // Next button click
            nextBtn.addEventListener('click', nextSong);
            
            // Progress bar click
            progressBar.addEventListener('click', setProgress);
            
            // Volume slider change
            volumeSlider.addEventListener('input', changeVolume);
        }
        
        // Load a song into the player
        function loadSong(index) {
            const song = playlist[index];
            audio.src = song.src;
            currentSongTitle.textContent = song.title;
            currentSongArtist.textContent = song.artist;
            currentSongDescription.textContent = song.description;
            currentAlbumCover.src = song.cover;
            songDurationEl.textContent = song.duration;
            
            // Update active item in playlist
            const playlistItems = document.querySelectorAll('.playlist-item');
            playlistItems.forEach(item => item.classList.remove('active'));
            playlistItems[index].classList.add('active');
        }
        
        // Render the playlist
        function renderPlaylist() {
            playlistItems.innerHTML = '';
            
            playlist.forEach((song, index) => {
                const item = document.createElement('div');
                item.className = `playlist-item ${index === currentSongIndex ? 'active' : ''}`;
                item.innerHTML = `
                    <img src="${song.cover}" alt="${song.title}">
                    <div class="playlist-item-info">
                        <h4>${song.title}</h4>
                        <p>${song.artist} • ${song.duration}</p>
                    </div>
                `;
                
                item.addEventListener('click', () => {
                    currentSongIndex = index;
                    loadSong(currentSongIndex);
                    if (isPlaying) {
                        audio.play();
                    }
                });
                
                playlistItems.appendChild(item);
            });
        }
        
        // Toggle play/pause
        function togglePlay() {
            if (isPlaying) {
                pauseSong();
            } else {
                playSong();
            }
        }
        
        // Play the current song
        function playSong() {
            isPlaying = true;
            audio.play();
            playPauseIcon.classList.remove('fa-play');
            playPauseIcon.classList.add('fa-pause');
            playPauseBtn.title = "Pause";
        }
        
        // Pause the current song
        function pauseSong() {
            isPlaying = false;
            audio.pause();
            playPauseIcon.classList.remove('fa-pause');
            playPauseIcon.classList.add('fa-play');
            playPauseBtn.title = "Play";
        }
        
        // Play previous song
        function prevSong() {
            currentSongIndex--;
            if (currentSongIndex < 0) {
                currentSongIndex = playlist.length - 1;
            }
            loadSong(currentSongIndex);
            if (isPlaying) {
                audio.play();
            }
        }
        
        // Play next song
        function nextSong() {
            currentSongIndex++;
            if (currentSongIndex >= playlist.length) {
                currentSongIndex = 0;
            }
            loadSong(currentSongIndex);
            if (isPlaying) {
                audio.play();
            }
        }
        
        // Update progress bar
        function updateProgress() {
            const { duration, currentTime } = audio;
            
            // Update progress bar width
            const progressPercent = (currentTime / duration) * 100;
            progress.style.width = `${progressPercent}%`;
            
            // Update time display
            const formatTime = (time) => {
                const minutes = Math.floor(time / 60);
                const seconds = Math.floor(time % 60);
                return `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
            };
            
            currentTimeEl.textContent = formatTime(currentTime);
            
            if (duration) {
                songDurationEl.textContent = formatTime(duration);
            }
        }
        
        // Set progress when clicking on progress bar
        function setProgress(e) {
            const width = this.clientWidth;
            const clickX = e.offsetX;
            const duration = audio.duration;
            
            audio.currentTime = (clickX / width) * duration;
        }
        
        // Change volume
        function changeVolume() {
            audio.volume = volumeSlider.value / 100;
        }
        
        // Focus timer functionality
        function initTimer() {
            updateTimerDisplay();
            
            startTimerBtn.addEventListener('click', startTimer);
            pauseTimerBtn.addEventListener('click', pauseTimer);
            resetTimerBtn.addEventListener('click', resetTimer);
            
            timerPresets.forEach(button => {
                button.addEventListener('click', () => {
                    timerMinutes = parseInt(button.getAttribute('data-minutes'));
                    timerSeconds = 0;
                    updateTimerDisplay();
                    if (isTimerRunning) {
                        clearInterval(timerInterval);
                        startTimer();
                    }
                });
            });
        }
        
        // Start the timer
        function startTimer() {
            if (isTimerRunning) return;
            
            isTimerRunning = true;
            startTimerBtn.disabled = true;
            pauseTimerBtn.disabled = false;
            
            timerInterval = setInterval(() => {
                if (timerSeconds === 0) {
                    if (timerMinutes === 0) {
                        // Timer completed
                        clearInterval(timerInterval);
                        isTimerRunning = false;
                        startTimerBtn.disabled = false;
                        alert("Focus session complete! Time for a short break.");
                        return;
                    }
                    timerMinutes--;
                    timerSeconds = 59;
                } else {
                    timerSeconds--;
                }
                
                updateTimerDisplay();
            }, 1000);
        }
        
        // Pause the timer
        function pauseTimer() {
            if (!isTimerRunning) return;
            
            clearInterval(timerInterval);
            isTimerRunning = false;
            startTimerBtn.disabled = false;
            pauseTimerBtn.disabled = true;
        }
        
        // Reset the timer
        function resetTimer() {
            clearInterval(timerInterval);
            isTimerRunning = false;
            timerMinutes = 25;
            timerSeconds = 0;
            updateTimerDisplay();
            startTimerBtn.disabled = false;
            pauseTimerBtn.disabled = false;
        }
        
        // Update timer display
        function updateTimerDisplay() {
            const displayMinutes = timerMinutes < 10 ? `0${timerMinutes}` : timerMinutes;
            const displaySeconds = timerSeconds < 10 ? `0${timerSeconds}` : timerSeconds;
            timerDisplay.textContent = `${displayMinutes}:${displaySeconds}`;
        }
        
        // Initialize productivity tools
        function initTools() {
            document.getElementById('task-list-btn').addEventListener('click', () => {
                alert("Task List feature would open here. This would allow you to create and manage tasks for your focus session.");
            });
            
            document.getElementById('distraction-log-btn').addEventListener('click', () => {
                alert("Distraction Log would open here. Track what distracts you to improve focus over time.");
            });
            
            document.getElementById('break-reminder-btn').addEventListener('click', () => {
                alert("Break Reminder settings would open here. Set intervals for short breaks during long work sessions.");
            });
        }
        
        // Initialize everything when the page loads
        document.addEventListener('DOMContentLoaded', () => {
            initPlayer();
            initTimer();
            initTools();
            
            // Auto-play first song (with user interaction required for some browsers)
            document.body.addEventListener('click', function initPlay() {
                if (!isPlaying) {
                    playSong();
                }
                document.body.removeEventListener('click', initPlay);
            });
        });
    </script>
</body>
</html>
